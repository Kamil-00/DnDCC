@{
    ViewData["Title"] = "Kontakt";
}

<div class="space-y-6 text-amber-900">
    <div>
        <p class="text-sm uppercase tracking-wide text-amber-700">Wsparcie</p>
        <h1 class="title-font text-3xl">Skontaktuj się z nami</h1>
        <p class="text-amber-800">Masz pytanie dotyczące aplikacji lub znalazłeś problem? Daj nam znać.</p>
    </div>

    <div class="grid gap-6 md:grid-cols-2">
        <div class="parchment rounded-2xl p-5 border border-amber-900/20 space-y-3">
            <h2 class="title-font text-xl">Kanały kontaktu</h2>
                <p><span class="font-semibold">Email:</span> ..........</p>
                <p><span class="font-semibold">Discord:</span> ..........</p>
                <p><span class="font-semibold">Telefon:</span> ..........</p>
        </div>

        <form class="parchment rounded-2xl p-5 border border-amber-900/20 space-y-3">
            <div>
                <label class="text-sm text-amber-900">Twoje imię</label>
                <input class="w-full mt-1 px-3 py-2 border border-amber-900/20 rounded-lg bg-white/90" />
            </div>
            <div>
                <label class="text-sm text-amber-900">Email</label>
                <input type="email" class="w-full mt-1 px-3 py-2 border border-amber-900/20 rounded-lg bg-white/90" />
            </div>
            <div>
                <label class="text-sm text-amber-900">Wiadomość</label>
                <textarea rows="4" class="w-full mt-1 px-3 py-2 border border-amber-900/20 rounded-lg bg-white/90"></textarea>
            </div>
            <button type="button" class="btn-primary px-4 py-2 rounded-xl text-sm font-semibold border border-amber-900/30">Wyślij</button>
        </form>
    </div>
</div>
