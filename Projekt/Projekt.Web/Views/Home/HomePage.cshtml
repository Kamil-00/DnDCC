@{
    ViewData["Title"] = "Strona główna";
    var cards = new[]
    {
        new { Title = "Podręczniki", Description = "Wyszukaj i przeglądaj swoje podręczniki D&D.", Action = Url.Action("Index", "Home"), Icon = "fa-solid fa-book" },
        new { Title = "Moje postacie", Description = "Zarządzaj bohaterami i aktualizuj ich arkusze.", Action = Url.Action("Index", "Character"), Icon = "fa-solid fa-users" },
        new { Title = "Stwórz postać", Description = "Zbuduj nowego bohatera krok po kroku.", Action = Url.Action("Add", "Character"), Icon = "fa-solid fa-wand-sparkles" }
    };
}

<div class="space-y-8 text-amber-900">
    <div class="text-center space-y-2">
        <p class="text-sm uppercase tracking-[0.35em] text-amber-700">DnD Character Creator</p>
        <h1 class="title-font text-4xl md:text-5xl">Strona główna</h1>
        <p class="max-w-2xl mx-auto text-amber-800">Szybki dostęp do kluczowych sekcji aplikacji. Wybierz kafelek i zanurz się w przygodzie.</p>
    </div>

    <div class="grid gap-5 md:grid-cols-3 mt-8">
        @foreach (var card in cards)
        {
            <a href="@card.Action"
               class="parchment rounded-2xl p-6 flex flex-col gap-4 border border-amber-900/30 bg-gradient-to-b from-white/70 to-amber-50/70 transition transform hover:-translate-y-1 hover:shadow-2xl">
                <div class="w-16 h-16 rounded-full border border-amber-900/20 bg-white/80 flex items-center justify-center text-amber-800">
                    <i class="@card.Icon text-2xl" aria-hidden="true"></i>
                    <span class="sr-only">@card.Title</span>
                </div>
                <div>
                    <h2 class="title-font text-2xl">@card.Title</h2>
                    <p class="text-sm text-amber-800 mt-1">@card.Description</p>
                </div>
                <span class="mt-auto inline-flex items-center gap-2 text-sm font-semibold text-amber-700">
                    Przejdź dalej
                </span>
            </a>
        }
    </div>

    <div class="grid gap-5 md:grid-cols-3">
        <a href="@Url.Action("Dice", "Home")"
           class="parchment rounded-2xl p-6 flex flex-col gap-4 border border-amber-900/30 bg-gradient-to-b from-white/70 to-amber-50/70 transition transform hover:-translate-y-1 hover:shadow-2xl">
            <div class="w-16 h-16 rounded-full border border-amber-900/20 bg-white/80 flex items-center justify-center text-amber-800">
                <i class="fa-solid fa-dice-d20 text-2xl" aria-hidden="true"></i>
                <span class="sr-only">Rzut kością</span>
            </div>
            <div>
                <h2 class="title-font text-2xl">Rzut kością</h2>
                <p class="text-sm text-amber-800 mt-1">Wypróbuj interaktywną kostkę 3D i śledź historię swoich rzutów.</p>
            </div>
            <span class="mt-auto inline-flex items-center gap-2 text-sm font-semibold text-amber-700">
                Przejdź do widoku Dice
            </span>
        </a>

        <div class="parchment rounded-2xl p-6 flex flex-col gap-4 border border-amber-900/30 bg-gradient-to-b from-white/70 to-amber-50/70">
            <div class="w-16 h-16 rounded-full border border-amber-900/20 bg-white/80 flex items-center justify-center text-amber-800">
                <i class="fa-solid fa-circle-question text-2xl" aria-hidden="true"></i>
                <span class="sr-only">Pomoc</span>
            </div>
            <div>
                <h2 class="title-font text-2xl">Potrzebujesz pomocy?</h2>
                <p class="text-sm text-amber-800 mt-1">Skontaktuj się z nami lub sprawdź najczęstsze pytania.</p>
            </div>
            <div class="mt-auto flex flex-col gap-2">
                <a href="@Url.Action("Contact", "Home")" class="btn-primary px-4 py-2 rounded-xl text-sm font-semibold border border-amber-900/30 text-center">Kontakt</a>
                <a href="@Url.Action("Faq", "Home")" class="px-4 py-2 rounded-xl text-sm font-semibold border border-amber-900/30 text-center text-amber-800 hover:border-amber-700">FAQ</a>
            </div>
        </div>

        <button type="button" id="accountCardTrigger"
                class="parchment rounded-2xl p-6 flex flex-col gap-4 border border-amber-900/30 bg-gradient-to-b from-white/70 to-amber-50/70 text-left transition transform hover:-translate-y-1 hover:shadow-2xl">
            <div class="w-16 h-16 rounded-full border border-amber-900/20 bg-white/80 flex items-center justify-center text-amber-800">
                <i class="fa-solid fa-user text-2xl" aria-hidden="true"></i>
                <span class="sr-only">Moje konto</span>
            </div>
            <div>
                <h2 class="title-font text-2xl">Moje konto</h2>
                <p class="text-sm text-amber-800 mt-1">Zarządzaj profilem, sprawdź status i przełącz się na tryb premium.</p>
            </div>
            <span class="mt-auto inline-flex items-center gap-2 text-sm font-semibold text-amber-700">
                Otwórz panel konta
            </span>
        </button>
    </div>
</div>

@section Scripts {
<script>
    (() => {
        const accountTrigger = document.getElementById('accountCardTrigger');
        const navAuthButton = document.getElementById('authButton');
        accountTrigger?.addEventListener('click', () => {
            navAuthButton?.click();
        });
    })();
</script>
}
