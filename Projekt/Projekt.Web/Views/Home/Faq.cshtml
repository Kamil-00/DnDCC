@{
    ViewData["Title"] = "FAQ";
    var questions = new[]
    {
        new { Question = "Jak dodać nową postać?", Answer = "Przejdź do sekcji „Stwórz postać”, uzupełnij dane i zapisz. System automatycznie doda proficiencies i ekwipunek startowy." },
        new { Question = "Gdzie znajdę podręczniki?", Answer = "W widoku „Podręczniki” możesz otwierać pełny PDF lub wybrane strony Players Handbook." },
    };
}

<div class="space-y-6 text-amber-900">
    <div>
        <p class="text-sm uppercase tracking-wide text-amber-700">Pomoc</p>
        <h1 class="title-font text-3xl">FAQ</h1>
        <p class="text-amber-800">Najczęściej zadawane pytania dotyczące DnD Command Center.</p>
    </div>

    <div class="space-y-3">
        @foreach (var qa in questions)
        {
            <details class="parchment rounded-2xl border border-amber-900/25">
                <summary class="cursor-pointer px-5 py-4 flex justify-between items-center">
                    <span class="font-semibold">@qa.Question</span>
                    <span aria-hidden="true" class="text-amber-700">+</span>
                </summary>
                <div class="px-5 pb-4 text-amber-800">
                    @qa.Answer
                </div>
            </details>
        }
    </div>
</div>
